{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": "./src"
  },
  "include": ["src/*.ts"],
  "exclude": ["generated"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
